<script>

  //Socket Client
  var socket = io();

  socket.on('connect', () => {
    console.log("Connected to the server!");
  })

  socket.on('news_message', (post) => {
    swal({
      title: "News Post!",
      text: `${post.author} just made a new post!`,
      icon: "info",
      buttons: ["Stay", "Go"],
      dangerMode: false,
    })
    .then((willMove) => {
      if (willMove) window.location.pathname = '/';

    });
  })

  socket.on('disconnect', () => {
    console.log("Disconnected from the server!")
  })

</script>
